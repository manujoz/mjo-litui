{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Full Application",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Full Test Suite",
			"type": "shell",
			"command": "npm run test",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Test Single File",
			"type": "shell",
			"command": "npm run test --files <file>",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Test Watch Mode",
			"type": "shell",
			"command": "npx web-test-runner --watch",
			"group": "test",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Build Server Client",
			"type": "shell",
			"command": "npm run server:build:client",
			"group": "build"
		},
		{
			"label": "Development Server",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Validate Build",
			"type": "shell",
			"command": "npm run build"
		},
		{
			"label": "Validate TypeScript",
			"type": "shell",
			"command": "npm run build"
		},
		{
			"label": "Clear NPM Cache",
			"type": "shell",
			"command": "npm cache clear --force"
		},
		{
			"label": "Check NPM Config",
			"type": "shell",
			"command": "npm config list"
		},
		{
			"label": "Set CA Certificates",
			"type": "shell",
			"command": "npm config set ca \"\""
		},
		{
			"label": "Test TLS Connection",
			"type": "shell",
			"command": "npm install -g https://tls-test.npmjs.com/tls-test-1.0.0.tgz"
		},
		{
			"label": "Dry Run Publish",
			"type": "shell",
			"command": "cd dist && npm publish --dry-run"
		},
		{
			"label": "Real Publish",
			"type": "shell",
			"command": "cd dist && npm publish"
		},
		{
			"label": "Check NPM Auth Status",
			"type": "shell",
			"command": "npm whoami"
		}
	]
}