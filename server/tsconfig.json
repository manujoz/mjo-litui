{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["../src/*"],
            "@components/*": ["../src/components/*"],
            "@mixins/*": ["../src/mixins/*"],
            "@theme/*": ["../src/theme/*"],
            "@utils/*": ["../src/utils/*"],
            "@controllers/*": ["../src/controllers/*"],
            "@types/*": ["../src/types/*"],
            "@locales/*": ["../src/locales/*"]
        },
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "../src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "../node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
